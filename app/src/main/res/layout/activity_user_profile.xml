<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/profile"
        app:layout_constraintBaseline_toTopOf="parent"
        android:background="@drawable/bg_heading"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY ACCOUNT"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        app:layout_constraintBottom_toBottomOf="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingTop="50dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_userImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                tools:ignore="MissingClass" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_txtboxEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_txtboxUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/user_lineBreak"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="?colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_lineBreak">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/textFields"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Diabetes Type"
                    android:id="@+id/txtTime"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/edtTime"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:hint="E.g Type 1"
                    android:inputType="time"
                    android:minHeight="48dp">

                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Alternate Health Issues"
                    android:id="@+id/txtBloodSugar"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/edtBloodSugar"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:hint="E.g AIDS"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Prescribed Medication"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txtGlucose"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/edtGlucose"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:hint="Glucose Reading"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"></EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Body Weight"
                    android:id="@+id/txtBloodPressure"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/edtBloodPressure"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:hint="Blood Pressure Reading"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"></EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Body Height"
                    android:id="@+id/txtMedication"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/edtMedication"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:hint="Medication"
                    android:inputType="text"
                    android:minHeight="48dp"></EditText>


                <Button
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btnCreateLog"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:text="LOG OUT">

                </Button>



            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>