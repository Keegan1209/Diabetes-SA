<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_heading"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE LOG"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Time recorded"
        android:id="@+id/txtTime"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtTime"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="E.g. 16:30"
            android:inputType="time"
            android:minHeight="48dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:text="Blood Sugar"
        android:id="@+id/txtBloodSugar"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtBloodSugar"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="Blood Sugar Reading"
            android:inputType="numberDecimal"
            android:minHeight="48dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:text="Glucose"
        android:layout_marginLeft="20dp"
        android:id="@+id/txtGlucose"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtGlucose"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="Glucose Reading"
            android:inputType="numberDecimal"
            android:minHeight="48dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:text="Blood Pressure"
        android:id="@+id/txtBloodPressure"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtBloodPressure"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="Blood Pressure Reading"
            android:inputType="numberDecimal"
            android:minHeight="48dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:text="Medication"
        android:id="@+id/txtMedication"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtMedication"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="Medication"
            android:inputType="text"
            android:minHeight="48dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:text="Food Types"
        android:id="@+id/txtFood"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtFood"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="Food Types"
            android:inputType="text"
            android:minHeight="48dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:text="Activity"
        android:id="@+id/txtActivity"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

        <EditText
            android:id="@+id/edtActivity"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:hint="Activity"
            android:inputType="text"
            android:minHeight="48dp">

        </EditText>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnCreateLog"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:text="CREATE LOG">

        </Button>
    </LinearLayout>




</LinearLayout>